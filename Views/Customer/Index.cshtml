@model List<Customer>
@{
    ViewData["Title"] = "Index";
}

<h2>My list of Customers</h2>

<a asp-action="Create" asp-controller="Customers" class="btn btn-success">Add New Customer</a>

<table class="table table-hover">
    <tr class="tableTitlesize">
        <td>Id</td>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Email</td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>

    @foreach(var customer in Model)
    {
    <tr>
        <td>@customer.CustomerId</td>
        <td>@customer.Fname</td>
        <td>@customer.Lname</td>
        <td>@customer.Email</td>

        <td>
            <a asp-controller="Customer" asp-action="Index" class="btn btn-warning">Edit</a>

            @*@Html.ActionLink("Edit", "Edit", "Students", new { StudentId = student.StudentId })  |
            @Html.ActionLink("Delete", "Delete", "Students", new { StudentId = student.StudentId })*@
        </td>
        <td>
            <a asp-controller="Customer" asp-action="Index" class="btn btn-danger">Delete</a>
        </td>
    </tr>

    }

</table>

